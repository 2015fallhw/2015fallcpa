&lt;p&gt;猜數字程式碼:&lt;/p&gt;
&lt;div class="highlight"&gt;&lt;pre&gt;#coding: utf-8
# 猜數字遊戲
import random

x = int(input(&amp;quot;請輸入下限的整數:&amp;quot;))
y = int(input(&amp;quot;請輸入上限的整數:&amp;quot;))

標準答案 = random.randint(x,y)
print(&amp;quot;標準答案:&amp;quot;,標準答案)
PC猜的數字 = random.randint(x,y)
print(&amp;quot;PC猜的數字:&amp;quot;,PC猜的數字)
猜測次數 = 1
while 標準答案 != PC猜的數字:
    if 標準答案 &lt;span class="nt"&gt;&amp;lt; PC猜的數字:&lt;/span&gt;
        &lt;span class="na"&gt;print&lt;/span&gt;&lt;span class="err"&gt;(&amp;quot;&lt;/span&gt;&lt;span class="na"&gt;太大了&lt;/span&gt;&lt;span class="err"&gt;，&lt;/span&gt;&lt;span class="na"&gt;再猜一次&lt;/span&gt; &lt;span class="na"&gt;:&lt;/span&gt;&lt;span class="err"&gt;)&lt;/span&gt;&lt;span class="na"&gt;加油&lt;/span&gt;&lt;span class="err"&gt;&amp;quot;)&lt;/span&gt;
        &lt;span class="na"&gt;y =&lt;/span&gt; &lt;span class="s"&gt;PC猜的數字-1&lt;/span&gt;
    &lt;span class="na"&gt;else:&lt;/span&gt;
        &lt;span class="na"&gt;print&lt;/span&gt;&lt;span class="err"&gt;(&amp;quot;&lt;/span&gt;&lt;span class="na"&gt;太小了&lt;/span&gt;&lt;span class="err"&gt;，&lt;/span&gt;&lt;span class="na"&gt;再猜一次&lt;/span&gt; &lt;span class="na"&gt;:&lt;/span&gt;&lt;span class="err"&gt;)&lt;/span&gt;&lt;span class="na"&gt;加油&lt;/span&gt;&lt;span class="err"&gt;&amp;quot;)&lt;/span&gt;
        &lt;span class="na"&gt;x =&lt;/span&gt; &lt;span class="s"&gt;PC猜的數字+1&lt;/span&gt;
    &lt;span class="na"&gt;PC猜的數字=&lt;/span&gt; &lt;span class="s"&gt;random.randint(x,y)&lt;/span&gt;
    &lt;span class="na"&gt;print&lt;/span&gt;&lt;span class="err"&gt;(&amp;quot;&lt;/span&gt;&lt;span class="na"&gt;PC猜的數字:&lt;/span&gt;&lt;span class="err"&gt;&amp;quot;,&lt;/span&gt;&lt;span class="na"&gt;PC猜的數字&lt;/span&gt;&lt;span class="err"&gt;)&lt;/span&gt;
    &lt;span class="na"&gt;猜測次數&lt;/span&gt; &lt;span class="err"&gt;+=&lt;/span&gt; &lt;span class="na"&gt;1&lt;/span&gt;

&lt;span class="na"&gt;print&lt;/span&gt;&lt;span class="err"&gt;(&amp;quot;&lt;/span&gt;&lt;span class="na"&gt;猜對了&lt;/span&gt;&lt;span class="err"&gt;！&lt;/span&gt;&lt;span class="na"&gt;總共猜了&lt;/span&gt;&lt;span class="err"&gt;&amp;quot;,&lt;/span&gt; &lt;span class="na"&gt;猜測次數&lt;/span&gt;&lt;span class="err"&gt;,&lt;/span&gt; &lt;span class="err"&gt;&amp;quot;&lt;/span&gt;&lt;span class="na"&gt;次&lt;/span&gt;&lt;span class="err"&gt;&amp;quot;)&lt;/span&gt;
